{
  "name": "jzacsh.github.com",
  "description": "statically generated personal website",
  "directories": {
    "bin": "bin"
  },
  "private": true,
  "os": [
    "linux"
  ],
  "scripts": {
    "setupbuild": "mkdir -p $npm_package_config_tmpsrv/",
    "compile": "susi $npm_package_config_source/ $npm_package_config_tmpsrv/ $npm_package_config_layouts/",
    "version": "git show-ref --hash heads/master | tee | cut -c 1-10",
    "versionurl": "echo \"$npm_package_homepage/tree/$(npm run -s version)\"",

    "tagtarget": "echo \"$npm_package_config_tmpsrv/index.html\"",
    "tagversion": "sed -i \"s|$npm_package_config_tagver|`npm run -s version`|\" $(npm run -s tagtarget)",
    "tagversionurl": "sed -i \"s|$npm_package_config_tagbug|`npm run -s versionurl`|\" $(npm run -s tagtarget)",
    "tagapp": "sed -i \"s|$npm_package_config_tagapp|$npm_package_config_appurl|\" $(npm run -s tagtarget)",
    "tagbuild": "npm run tagversion && npm run tagversionurl && npm run tagapp",

    "clean": "npm run -s setupbuild && find $npm_package_config_tmpsrv/ -mindepth 1 -exec rm -rf {} +;",

    "assets": "npm run tagbuild && npm run appcache",
    "build": "npm run clean && npm run compile && npm run assets",
    "watch": "./bin/watchcode.js 'npm run build' --wait=.25 $PWD/$npm_package_config_source",
    "deploy": "./bin/deploy.sh \"$npm_package_config_tmpsrv/\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jzacsh/jzacsh.github.com.git"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/jzacsh/jzacsh.github.com",
  "config": {
    "gdriveart": "0B61bPXQ61mAFUTd3STUtX094S00",
    "tmpsrv": "tmp",
    "source": "app/contents",
    "layouts": "app/layouts",
    "tagver": "TAG_VERSION",
    "tagbug": "TAG_FEEDBACK_URL",
    "tagapp": "TAG_APP_URL",
    "devport": "2223"
  },
  "dependencies": {
    "susi": "^0.2.3"
  }
}
