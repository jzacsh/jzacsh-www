{
  "name": "jzacsh.github.com",
  "description": "statically generated personal website",
  "directories": {
    "bin": "bin"
  },
  "private": true,
  "os": [
    "linux"
  ],
  "scripts": {
    "setupbuild": "mkdir -p $npm_package_config_tmpsrv/",
    "compile": "susi $npm_package_config_source/ $npm_package_config_tmpsrv/ $npm_package_config_layouts/",
    "version": "git show-ref --hash heads/master | tee | cut -c 1-10",
    "versionurl": "echo \"$npm_package_homepage/tree/$(npm run -s version)\"",
    "versiondate": "git show -s --format=%cd \"$(npm run -s version)\"",

    "tagtarget": "echo \"$npm_package_config_tmpsrv/*.html\"",
    "tagverhash": "sed -i \"s|$npm_package_config_taghash|`npm run -s version`|\" $(npm run -s tagtarget)",
    "tagtreeurl": "sed -i \"s|$npm_package_config_tagtree|`npm run -s versionurl`|\" $(npm run -s tagtarget)",
    "tagdate": "sed -i \"s|$npm_package_config_tagdate|`npm run -s versiondate`|\" $(npm run -s tagtarget)",
    "tagbuild": "npm run tagverhash && npm run tagtreeurl && npm run tagdate",

    "clean": "npm run -s setupbuild && find $npm_package_config_tmpsrv/ -mindepth 1 -exec rm -rf {} +;",

    "build": "npm run clean && npm run compile && npm run tagbuild",
    "watch": "./bin/watchcode.js 'npm run build' --wait=.25 $PWD/$npm_package_config_source",
    "deploy": "./bin/deploy.sh \"$npm_package_config_tmpsrv/\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jzacsh/jzacsh.github.com.git"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/jzacsh/jzacsh.github.com",
  "config": {
    "gdriveart": "0B61bPXQ61mAFUTd3STUtX094S00",
    "tmpsrv": "tmp",
    "source": "app/content",
    "layouts": "app/layouts",
    "taghash": "TAG_VERSION_HASH",
    "tagtree": "TAG_VERSION_TREE",
    "tagdate": "TAG_VERSION_DATE",
    "devport": "2223"
  },
  "dependencies": {
    "susi": "^0.2.3"
  }
}
